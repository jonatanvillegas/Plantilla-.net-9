<!-- Topbar Start -->
<header class="app-topbar">
    <div class="container-fluid topbar-menu">
        <div class="d-flex align-items-center gap-2">
            <!-- Topbar Brand Logo -->
            <div class="logo-topbar">
                <!-- Logo light -->
                <a href=@Url.Action("Index1", "Dashboards") class="logo-light">
                    <span class="logo-lg">
                        <img src="~/images/logo.png" alt="logo">
                    </span>
                    <span class="logo-sm">
                        <img src="~/images/logo-sm.png" alt="small logo">
                    </span>
                </a>

                <!-- Logo Dark -->
                <a href=@Url.Action("Index1", "Dashboards") class="logo-dark">
                    <span class="logo-lg">
                        <img src="~/images/logo-black.png" alt="dark logo">
                    </span>
                    <span class="logo-sm">
                        <img src="~/images/logo-sm.png" alt="small logo">
                    </span>
                </a>
            </div>

            <!-- Sidebar Menu Toggle Button -->
            <button class="sidenav-toggle-button btn btn-primary btn-icon">
                <i class="ti ti-menu-4 fs-22"></i>
            </button>

            <!-- Horizontal Menu Toggle Button -->
            <button class="topnav-toggle-button px-2" data-bs-toggle="collapse" data-bs-target="#topnav-menu-content">
                <i class="ti ti-menu-4 fs-22"></i>
            </button>
        </div> <!-- .d-flex-->

        <div class="d-flex align-items-center gap-2">

            <!-- Button Trigger Customizer Offcanvas -->
            <div class="topbar-item d-none d-sm-flex">
                <button class="topbar-link" data-bs-toggle="offcanvas" data-bs-target="#theme-settings-offcanvas" type="button">
                    <i data-lucide="settings" class="fs-xxl"></i>
                </button>
            </div>

            <!-- Botón para abrir el modal de comandos -->
            <button type="button" class="btn btn-link px-2" id="btn-comandos" title="Ver comandos rápidos" data-bs-toggle="modal" data-bs-target="#modalComandos">
                <i class="ti ti-info-circle fs-4 text-info"></i>
            </button>

            <!-- Light/Dark Mode Button -->
            <div class="topbar-item d-none d-sm-flex">
                <button class="topbar-link" id="light-dark-mode" type="button">
                    <i data-lucide="moon" class="fs-xxl mode-light-moon"></i>
                    <i data-lucide="sun" class="fs-xxl mode-light-sun"></i>
                </button>
            </div>

            <!-- User Dropdown -->
            <div class="topbar-item nav-user">
                <div class="dropdown">
                    <a class="topbar-link dropdown-toggle drop-arrow-none px-2" data-bs-toggle="dropdown" data-bs-offset="0,16" href="#!" aria-haspopup="false" aria-expanded="false">
                        <img src="~/images/users/user-2.jpg" width="32" class="rounded-circle me-lg-2 d-flex" alt="user-image">
                        <div class="d-lg-flex align-items-center gap-1 d-none">
                            <h5 class="my-0">Damian D.</h5>
                            <i class="ti ti-chevron-down align-middle"></i>
                        </div>
                    </a>
                    <div class="dropdown-menu dropdown-menu-end">
                        <!-- My Profile -->
                        <a href=@Url.Action("Profile", "Pages") class="dropdown-item">
                            <i class="ti ti-user-circle me-2 fs-17 align-middle"></i>
                            <span class="align-middle">Profile</span>
                        </a>
                        <hr />
                        <!-- Logout -->
                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                            <button type="submit" class="dropdown-item text-danger fw-semibold" style="background:none; border:none; width:100%; text-align:left;">
                                <i class="ti ti-logout-2 me-2 fs-17 align-middle"></i>
                                <span class="align-middle">Cerrar sesión</span>
                            </button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
   
</header>

<!-- Modal de Comandos Rápidos -->
<div class="modal fade" id="modalComandos" tabindex="-1" aria-labelledby="modalComandosLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalComandosLabel">
                    <i class="ti ti-keyboard fs-4 text-primary"></i> Comandos rápidos del sistema
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <div class="row g-3">
                    <div class="col-12 col-md-6">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <i class="ti ti-arrow-right text-secondary"></i>
                                <kbd>Tab</kbd>/<kbd>Shift+Tab</kbd> <span class="text-muted">Mover foco en venta</span>
                            </li>
                            <li class="list-group-item">
                                <i class="ti ti-edit text-info"></i>
                                <kbd>Enter</kbd> o <kbd>E</kbd> <span class="text-muted">Editar producto</span>
                            </li>
                            <li class="list-group-item">
                                <i class="ti ti-device-floppy text-success"></i>
                                <kbd>Ctrl</kbd>+<kbd>S</kbd> <span class="text-muted">Guardar edición</span>
                            </li>
                            <li class="list-group-item">
                                <i class="ti ti-trash text-danger"></i>
                                <kbd>Delete</kbd> <span class="text-muted">Eliminar producto</span>
                            </li>
                            <li class="list-group-item">
                                <i class="ti ti-plus text-success"></i>
                                <kbd>+</kbd> <span class="text-muted">Sumar cantidad</span>
                            </li>
                            <li class="list-group-item">
                                <i class="ti ti-minus text-warning"></i>
                                <kbd>-</kbd> <span class="text-muted">Restar cantidad</span>
                            </li>
                        </ul>
                    </div>
                    <div class="col-12 col-md-6">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <i class="ti ti-brush text-secondary"></i>
                                <kbd>Ctrl</kbd>+<kbd>L</kbd> <span class="text-muted">Limpiar venta</span>
                            </li>
                            <li class="list-group-item">
                                <i class="ti ti-search text-primary"></i>
                                <kbd>Ctrl</kbd>+<kbd>F</kbd> o <kbd>F2</kbd> <span class="text-muted">Buscar producto</span>
                            </li>
                            <li class="list-group-item">
                                <i class="ti ti-info-circle text-info"></i>
                                <kbd>Ctrl</kbd>+<kbd>I</kbd> <span class="text-muted">Ver comandos</span>
                            </li>
                            <li class="list-group-item">
                                <i class="ti ti-x text-danger"></i>
                                <kbd>Esc</kbd> <span class="text-muted">Cancelar edición</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        document.getElementById('btn-comandos')?.addEventListener('click', function() {
            var modal = new bootstrap.Modal(document.getElementById('modalComandos'));
            modal.show();
        });
    </script>
}