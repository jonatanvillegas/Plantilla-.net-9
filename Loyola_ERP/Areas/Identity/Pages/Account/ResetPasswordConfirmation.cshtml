@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Contraseña cambiada exitosamente";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="auth-box overflow-hidden align-items-center d-flex">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xxl-4 col-md-6 col-sm-8 p-0">
                <div class="auth-brand text-center mb-4">
                    <a href="index.html" class="logo-dark">
                        <img src="~/images/loyola/logos/logo.png" alt="dark logo" height="70">
                    </a>
                    <a href="index.html" class="logo-light">
                        <img src="~/images/loyola/logos/logo.png" alt="logo" height="70">
                    </a>
                </div>

                <div class="card p-4 rounded-4 text-center">
                    <!-- Icono de éxito -->
                    <div class="mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="#28a745" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                        </svg>
                    </div>

                    <h3 class="fw-bold mb-3">¡Contraseña cambiada con éxito!</h3>

                    <p class="text-muted mb-4">
                        Tu contraseña ha sido actualizada correctamente. Ahora puedes iniciar sesión con tu nueva contraseña.
                    </p>

                    <div class="d-grid gap-2">
                        <a href="auth-sign-in.html" class="btn btn-primary py-2 fw-semibold">
                            Iniciar sesión
                        </a>
                    </div>

                    <p class="text-muted mt-4 mb-0">
                        ¿Necesitas ayuda? <a href="#" class="text-decoration-underline link-offset-2 fw-semibold">Contáctanos</a>
                    </p>
                </div>

                <p class="text-center text-muted mt-4 mb-0">
                    <script>document.write(new Date().getFullYear())</script> ERP-Loyola — <span class="fw-semibold">Equipo de desarrollo</span>
                </p>
            </div>
        </div>
    </div>
</div>