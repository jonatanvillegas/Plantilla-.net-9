@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@section Styles
{
    <style>
        @@media (max-width: 932px) {
            .items-actions {
                display: flex !important;
                flex-direction: column !important;
                align-items: flex-start !important;
                gap: 0.5rem;
            }

            .auth-box {
                padding: 15px;
            }

            .card-body {
                padding: 1.875rem !important;
            }
        }
    </style>
}

<div class="auth-box d-flex align-items-center">
    <div class="container-xxl">
        <div class="row align-items-center justify-content-center">
            <div class="col-xl-10">
                <div class="card rounded-4">
                    <div class="row justify-content-between g-0">
                        <div class="col-lg-6">
                            <div class="card-body">
                                <div class="auth-brand text-center mb-4">
                                    <a href="/" class="logo-dark">
                                        <img src="~/icons/icon-512.png" alt="dark logo" height="100">
                                    </a>
                                    <a href="/" class="logo-light">
                                        <img src="~/icons/icon-512.png" alt="logo" height="100">
                                    </a>
                                    <h4 class="fw-bold mt-4">Nica Post</h4>
                                    <p class="text-muted w-lg-75 mx-auto">Inicia sesión con tu correo y contraseña.</p>
                                </div>

                                <form id="account" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                                    <div class="mb-3">
                                        <label asp-for="Input.Email" class="form-label">Correo electrónico <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light">
                                                <i class="ti ti-mail text-muted fs-xl"></i>
                                            </span>
                                            <input asp-for="Input.Email" class="form-control" placeholder="you@example.com" autocomplete="username" />
                                        </div>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="Input.Password" class="form-label">Contraseña <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light">
                                                <i class="ti ti-lock-password text-muted fs-xl"></i>
                                            </span>
                                            <input asp-for="Input.Password" class="form-control" placeholder="••••••••" autocomplete="current-password" />
                                        </div>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center mb-3 items-actions">
                                        <div class="form-check">
                                            <input class="form-check-input form-check-input-light fs-14" asp-for="Input.RememberMe" />
                                            <label class="form-check-label" asp-for="Input.RememberMe">
                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                            </label>
                                        </div>
                                        <a asp-page="./ForgotPassword" class="text-decoration-underline link-offset-3 text-muted">¿Olvidaste tu contraseña?</a>
                                    </div>

                                    <div class="d-grid">
                                        <button id="login-submit" type="submit" class="btn btn-primary fw-semibold py-2">Iniciar sesión</button>
                                    </div>
                                </form>

                                <p class="text-muted text-center mt-4 mb-0">
                                    ¿Eres nuevo? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-underline link-offset-3 fw-semibold">Crea una cuenta</a>
                                </p>

                                <p class="text-center text-muted mt-4 mb-0">
                                    <script>document.write(new Date().getFullYear())</script> ERP Loyola<span class="fw-semibold"> Equipo de desarrollo</span>
                                </p>
                            </div>
                        </div>

                        <div class="col-lg-6 d-none d-lg-block">
                            <div class="h-100 position-relative card-side-img rounded-end-4 overflow-hidden">
                                <div class="p-4 card-img-overlay rounded-4 auth-overlay d-flex align-items-end justify-content-center">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
